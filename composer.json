{
    "name": "yii-extension/simple-forms",
    "type": "library",
    "description": "Simple Forms for Yii Packages",
    "keywords": [
        "yii3",
        "simple",
        "forms"
    ],
    "license": "BSD-3-Clause",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": ">=8.0",
        "composer/composer": "^2.1.3",
        "yii-extension/simple-model": "^1.0",
        "yii-extension/simple-widget": "^1.0",
        "yiisoft/http": "^1.0",
        "yiisoft/html": "^3.0",
        "yiisoft/validator": "^3.0@dev"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "roave/infection-static-analysis-plugin": "^1.9",
        "yiisoft/test-support": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "Yii\\Extension\\Form\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Yii\\Extension\\Form\\Tests\\": "tests"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0.x-dev"
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "infection/extension-installer": true
        }
    }
}
